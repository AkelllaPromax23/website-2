{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "start-dev-server",
            "type": "shell",
            "command": "npx",
            "args": [
                "http-server",
                "-p",
                "3000",
                "-c-1"
            ],
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "Starting up http-server",
                        "endsPattern": "Available on"
                    }
                }
            ],
            "group": "build"
        },
        {
            "label": "start-server",
            "type": "shell",
            "command": "node",
            "args": [
                "server.js"
            ],
            "isBackground": true,
            "group": "build"
        },
        {
            "label": "stop-server",
            "type": "shell",
            "command": "echo",
            "args": [
                "Server stopped"
            ],
            "group": "build"
        }
    ]
}